@{ 
    ViewData["Title"] = "Index";
}
@model List<Movie>

<h1>Movies</h1>

<table class="table table-bordered">
    <tr>
        <th>Title</th>
        <th>Genre</th>
        <th>Runtime</th>

    </tr>
    @foreach (var movie in Model)
    {
        <tr>
            <td>@movie.title</td>
            <td>@movie.genre</td>
            <td>@movie.runtime</td>
            <td><a href="Movie/DeleteMovie?id=@movie.id" class="btn btn-danger">Delete @movie.title</a></td>
            <td><a href="Movie/MovieForm?id=@movie.id" class="btn btn-dark">Edit @movie.title</a></td>
        </tr>

    }

</table>
<td><a href="Movie/MovieForm" class="btn btn-dark">Add</a></td>